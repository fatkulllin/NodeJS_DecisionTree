<h1>Отзывы</h1>

{{#if reviews.length}}
{{#each reviews}}
<div class="row">
    <div class="col s8  offset-s2">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{userId.name}}</span>
          <p class="otzyv">{{otzyv}}</p>
        </div>
        <div class="card-action">
          <a href="/reviews/{{id}}">Открыть отзыв</a>
          {{!-- <a href="/reviews/{{id}}/edit?allow=true">Redact</a> --}} 
          {{!-- /edit?allow=true --}}
          <p>Дата: {{date}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>Отзывов пока нет</p>
{{/if}}